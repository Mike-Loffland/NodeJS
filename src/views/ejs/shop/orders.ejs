</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <% if (orders.length > 0) { %>
          <ul>
            <% for (let order of orders) { %>
              <li>
                <h1><%= order._id %></h1>
                <ul>
                  <% order.items.forEach(p => { %>
                    <li><%= p.title %> (<%= p.quantity %>)</li>
                  <% }) %>
                </ul>
              </li>
            <% } %>
          </tbody>
        </table>
      <% } else { %>
        <h1>No Orders</h1>
      <% } %>
    </main>
<%- include('../includes/end.ejs') %>
